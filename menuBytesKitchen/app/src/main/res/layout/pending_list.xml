<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtOrderNumber"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="001"
        android:textColor="#FF000000"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/txtTableNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtOrderNumber"
        android:text="Table_01"
        android:textColor="#FF000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPendingOrderQty"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtTableNumber"
        android:gravity="center"
        android:maxLength="20"
        android:singleLine="True"
        android:text="99"
        android:textColor="#FF000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtPendingOrderQty"
        android:gravity="right"
        android:maxLength="20"
        android:singleLine="True"
        android:text="status"
        android:textColor="#FF000000"
        android:textSize="30sp" />

</RelativeLayout>